<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcommerceApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">EcommerceApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AddProduct", "Product")">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("AddCustomer", "Customer")">Add Customer</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("UploadFile", "FileUpload")">Upload File</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer bg-light text-center">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - EcommerceApp</p>
        </div>
    </footer>

    <!-- Bootstrap JS with Popper -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
